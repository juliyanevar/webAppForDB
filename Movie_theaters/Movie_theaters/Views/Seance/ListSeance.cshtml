@model IEnumerable<Movie_theaters.Models.SeanceModel>

@{
    ViewBag.Title = "ListSeance";
}

<h2>ListSeance</h2>

<p>
    @Html.ActionLink("Create New", "AddSeance")
</p>
<p>
    @Html.ActionLink("Generate seances", "GenerateSeances")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Theater.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CinemaHall.Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Movie.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Theater.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CinemaHall.Number)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Movie.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Date)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Time)
    </td>
    <td>
        @Html.ActionLink("Edit", "EditSeance", new { id = item.Id }) |
        @Html.ActionLink("Delete", "DeleteSeance", new { id = item.Id })
    </td>
</tr>
}

</table>
