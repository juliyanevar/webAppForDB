@model IEnumerable<Movie_theaters.Models.TheaterModel>

@{
    ViewBag.Title = "ListTheater";
}

<h2>ListTheater</h2>

<p>
    @Html.ActionLink("Create New", "AddTheater")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CountHalls)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CountHalls)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditTheater", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteTheater", new { id=item.Id })
        </td>
    </tr>
}

</table>
