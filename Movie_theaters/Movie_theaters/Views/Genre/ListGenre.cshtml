@model IEnumerable<Movie_theaters.Models.GenreModel>

@{
    ViewBag.Title = "ListGenre";
}

<h2>ListGenre</h2>

<p>
    @Html.ActionLink("Create New", "AddGenre")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditGenre", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteGenre", new { id=item.Id })
        </td>
    </tr>
}

</table>
